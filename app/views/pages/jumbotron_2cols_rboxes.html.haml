- content_for :top do
  .jumbotron.masthead(style="#{@page.styles['page_jumbotron_style']}")
    .container
      #page_jumbotron(data-mercury="full" data-content-store="page")<
        = raw @page.get_content('page_jumbotron')

  .social
    %iframe{:src=>"//www.facebook.com/plugins/like.php?href=http%3A%2F%2F#{current_site.domains.first}&send=false&layout=button_count&width=250&show_faces=true&action=recommend&colorscheme=light&font&height=21", :scrolling=>"no", :frameborder=>"0", :style=>"border:none; overflow:hidden; width:250px; height:21px;", :allowTransparency=>"true"}
    %g:plusone
    

.container(style="margin-top: 20px;")
  .row
    .span6
      #column1(data-mercury="full" data-content-store="page")<
        = raw @page.get_content('column1')
    .span6
      #box1.well(data-mercury="full" data-content-store="page")<
        = raw @page.get_content('box1')
      #box2.well(data-mercury="full" data-content-store="page")<
        = raw @page.get_content('box2')
      #box3.well(data-mercury="full" data-content-store="page")<
        = raw @page.get_content('box3')


